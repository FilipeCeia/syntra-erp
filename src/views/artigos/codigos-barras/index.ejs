<script>
function copiarCodigo(codigo) {
  navigator.clipboard.writeText(codigo).then(function() {
    // Mostrar toast de sucesso
    const toast = document.createElement('div');
    toast.className = 'toast align-items-center text-white bg-success border-0 position-fixed';
    toast.style.cssText = 'top: 20px; right: 20px; z-index: 9999;';
    toast.innerHTML = `
      <div class="d-flex">
        <div class="toast-body">
          <i class="fas fa-check me-2"></i>
          Código copiado: ${codigo}
        </div>
        <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast"></button>
      </div>
    `;
    document.body.appendChild(toast);
    const bsToast = new bootstrap.Toast(toast);
    bsToast.show();
    
    // Remover o toast após 3 segundos
    setTimeout(() => {
      toast.remove();
    }, 3000);
  }).catch(function(err) {
    console.error('Erro ao copiar código: ', err);
  });
}

function gerarCodigo() {
  const form = document.getElementById('gerarCodigoForm');
  const formData = new FormData(form);
  
  // Validar campos obrigatórios
  if (!formData.get('produto') || !formData.get('tipoCodigo') || !formData.get('quantidade')) {
    alert('Por favor, preencha todos os campos obrigatórios.');
    return;
  }
  
  // Simular geração de código
  const modal = bootstrap.Modal.getInstance(document.getElementById('gerarCodigoModal'));
  modal.hide();
  
  // Mostrar toast de sucesso
  const toast = document.createElement('div');
  toast.className = 'toast align-items-center text-white bg-success border-0 position-fixed';
  toast.style.cssText = 'top: 20px; right: 20px; z-index: 9999;';
  toast.innerHTML = `
    <div class="d-flex">
      <div class="toast-body">
        <i class="fas fa-check me-2"></i>
        Código de barras gerado com sucesso!
      </div>
      <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast"></button>
    </div>
  `;
  document.body.appendChild(toast);
  const bsToast = new bootstrap.Toast(toast);
  bsToast.show();
  
  // Remover o toast e recarregar a página após 2 segundos
  setTimeout(() => {
    toast.remove();
    window.location.reload();
  }, 2000);
}
</script>