<script>
function ajustarEstoque(id) {
    Swal.fire({
        title: 'Ajustar Estoque',
        text: 'Tem certeza que deseja ajustar o estoque conforme a contagem física?',
        icon: 'question',
        showCancelButton: true,
        confirmButtonText: 'Sim, ajustar',
        cancelButtonText: 'Cancelar'
    }).then((result) => {
        if (result.isConfirmed) {
            // Aqui seria feita a requisição para ajustar o estoque
            Swal.fire('Sucesso!', 'Estoque ajustado com sucesso.', 'success');
        }
    });
}

function recontarArtigo(id) {
    Swal.fire({
        title: 'Recontar Artigo',
        text: 'Deseja marcar este artigo para recontagem?',
        icon: 'question',
        showCancelButton: true,
        confirmButtonText: 'Sim, recontar',
        cancelButtonText: 'Cancelar'
    }).then((result) => {
        if (result.isConfirmed) {
            // Aqui seria feita a requisição para marcar recontagem
            Swal.fire('Sucesso!', 'Artigo marcado para recontagem.', 'success');
        }
    });
}

