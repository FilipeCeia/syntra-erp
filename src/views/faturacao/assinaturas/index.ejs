<!-- Modal Nova Assinatura -->
<div class="modal fade" id="modal-nova-assinatura">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-header bg-success">
        <h4 class="modal-title">Nova Assinatura</h4>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <form>
          <div class="row">
            <div class="col-md-6">
              <div class="form-group">
                <label for="cliente">Cliente/Empresa</label>
                <select class="form-control select2" id="cliente" style="width: 100%;">
                  <option selected disabled>Selecione um cliente</option>
                  <option>Empresa ABC Ltda</option>
                  <option>Comércio XYZ</option>
                  <option>Loja 123</option>
                  <option>Restaurante Delícia</option>
                  <option>Farmácia Saúde</option>
                </select>
              </div>
              <div class="form-group">
                <label for="plano">Plano</label>
                <select class="form-control select2" id="plano" style="width: 100%;">
                  <option selected disabled>Selecione um plano</option>
                  <option>Básico</option>
                  <option>Profissional</option>
                  <option>Empresarial</option>
                  <option>Premium</option>
                </select>
              </div>
              <div class="form-group">
                <label for="data_inicio">Data de Início</label>
                <div class="input-group date" id="data_inicio" data-target-input="nearest">
                  <input type="text" class="form-control datetimepicker-input" data-target="#data_inicio">
                  <div class="input-group-append" data-target="#data_inicio" data-toggle="datetimepicker">
                    <div class="input-group-text"><i class="fa fa-calendar"></i></div>
                  </div>
                </div>
              </div>
            </div>
            <div class="col-md-6">
              <div class="form-group">
                <label for="duracao">Duração</label>
                <select class="form-control" id="duracao">
                  <option>1 mês</option>
                  <option>3 meses</option>
                  <option>6 meses</option>
                  <option selected>12 meses</option>
                </select>
              </div>
              <div class="form-group">
                <label for="valor_mensal">Valor Mensal (MZN)</label>
                <input type="text" class="form-control" id="valor_mensal" placeholder="0,00">
              </div>
              <div class="form-group">
                <label for="forma_pagamento">Forma de Pagamento</label>
                <select class="form-control" id="forma_pagamento">
                  <option>Transferência Bancária</option>
                  <option>Cartão de Crédito</option>
                  <option>M-Pesa</option>
                  <option>Dinheiro</option>
                </select>
              </div>
            </div>
          </div>
