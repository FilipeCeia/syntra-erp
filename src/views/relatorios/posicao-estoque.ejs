


    <!-- Cabeçalho -->
    <div class="d-flex justify-content-between align-items-center mb-4">
       
        
        <div>
            <button class="btn btn-outline-secondary me-2" onclick="window.print()">
                <i class="fas fa-print"></i> Imprimir
            </button>
            <button class="btn btn-success" onclick="exportToExcel()">
                <i class="fas fa-file-excel"></i> Exportar Excel
            </button>
        </div>
    </div>

    <!-- Filtros -->
    <div class="card mb-4">
        <div class="card-body">
            <form method="GET" class="row g-3">
                <div class="col-md-3">
                    <label for="categoria" class="form-label">Categoria</label>
                    <select class="form-select" id="categoria" name="categoria">
                        <option value="">Todas as Categorias</option>
                        <option value="eletronicos" <%= filtros.categoria === 'eletronicos' ? 'selected' : '' %>>Eletrônicos</option>
                        <option value="roupas" <%= filtros.categoria === 'roupas' ? 'selected' : '' %>>Roupas</option>
                        <option value="casa" <%= filtros.categoria === 'casa' ? 'selected' : '' %>>Casa e Jardim</option>
                    </select>
                </div>
                <div class="col-md-3">
                    <label for="situacao" class="form-label">Situação</label>
                    <select class="form-select" id="situacao" name="situacao">
                        <option value="">Todas as Situações</option>
                        <option value="normal" <%= filtros.situacao === 'normal' ? 'selected' : '' %>>Normal</option>
                        <option value="baixo" <%= filtros.situacao === 'baixo' ? 'selected' : '' %>>Estoque Baixo</option>
                        <option value="zerado" <%= filtros.situacao === 'zerado' ? 'selected' : '' %>>Estoque Zerado</option>
                    </select>
                </div>
                <div class="col-md-3">
                    <label for="loja" class="form-label">Loja</label>
                    <select class="form-select" id="loja" name="loja">
                        <option value="">Todas as Lojas</option>
                        <option value="1" <%= filtros.loja === '1' ? 'selected' : '' %>>Loja Principal</option>
                        <option value="2" <%= filtros.loja === '2' ? 'selected' : '' %>>Loja Shopping</option>
                        <option value="3" <%= filtros.loja === '3' ? 'selected' : '' %>>Loja Centro</option>
                    </select>
                </div>
                <div class="col-md-3 d-flex align-items-end">
                    <button type="submit" class="btn btn-primary me-2">
                        <i class="fas fa-search"></i> Filtrar
                    </button>
                    <a href="/relatorios/posicao-estoque" class="btn btn-outline-secondary">
                        <i class="fas fa-times"></i> Limpar
                    </a>
                </div>
            </form>
        </div>
    </div>

    <!-- Cards de Resumo -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card bg-primary text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h6 class="card-title">Total de Artigos</h6>
                            <h3 class="mb-0"><%= resumo.totalArtigos %></h3>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-boxes fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-success text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h6 class="card-title">Valor do Estoque</h6>
                            <h3 class="mb-0"><%= resumo.valorEstoque %></h3>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-dollar-sign fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-warning text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h6 class="card-title">Estoque Baixo</h6>
                            <h3 class="mb-0"><%= resumo.estoqueBaixo %></h3>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-exclamation-triangle fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-danger text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h6 class="card-title">Estoque Zerado</h6>
                            <h3 class="mb-0"><%= resumo.estoqueZerado %></h3>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-times-circle fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Gráfico -->
    <div class="card mb-4">
        <div class="card-header">
            <h5 class="mb-0">Distribuição do Estoque por Categoria</h5>
        </div>
        <div class="card-body">
            <canvas id="estoqueChart" height="100"></canvas>
        </div>
    </div>

    <!-- Tabela de Estoque -->
    <div class="card">
        <div class="card-header">
            <h5 class="mb-0">Detalhes do Estoque</h5>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>Código</th>
                            <th>Artigo</th>
                            <th>Categoria</th>
                            <th>Loja</th>
                            <th>Quantidade</th>
                            <th>Estoque Mín.</th>
                            <th>Custo Unit.</th>
                            <th>Valor Total</th>
                            <th>Situação</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% estoque.forEach(item => { %>
                        <tr>
                            <td><%= item.codigo %></td>
                            <td><%= item.nome %></td>
                            <td><%= item.categoria %></td>
                            <td><%= item.loja %></td>
                            <td><%= item.quantidade %></td>
                            <td><%= item.estoqueMinimo %></td>
                            <td><%= item.custoUnitario %></td>
                            <td><%= item.valorTotal %></td>
                            <td>
                                <% if (item.situacao === 'Normal') { %>
                                    <span class="badge bg-success">Normal</span>
                                <% } else if (item.situacao === 'Baixo') { %>
                                    <span class="badge bg-warning">Baixo</span>
                                <% } else { %>
                                    <span class="badge bg-danger">Zerado</span>
                                <% } %>
                            </td>
                        </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<script>
// Gráfico de Estoque
const ctx = document.getElementById('estoqueChart').getContext('2d');
const estoqueChart = new Chart(ctx, {
    type: 'doughnut',
    data: {
        labels: <%- JSON.stringify(graficoEstoque.labels) %>,
        datasets: [{
            data: <%- JSON.stringify(graficoEstoque.valores) %>,
            backgroundColor: [
                '#FF6384',
                '#36A2EB',
                '#FFCE56',
                '#4BC0C0',
                '#9966FF'
            ]
        }]
    },
    options: {
        responsive: true,
        maintainAspectRatio: false
    }
});

function exportToExcel() {
    alert('Funcionalidade de exportação será implementada em breve!');
}
</script>

