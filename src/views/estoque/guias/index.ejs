<script>
$(document).ready(function() {
  $('#dataTable').DataTable({
    "language": {
      "url": "//cdn.datatables.net/plug-ins/1.10.24/i18n/Portuguese.json"
    },
    "order": [[ 1, "desc" ]],
    "pageLength": 25
  });
});

function aplicarFiltros() {
  // Implementar lógica de filtros
  toastr.info('Filtros aplicados com sucesso!');
}

function limparFiltros() {
  document.getElementById('filtroNumero').value = '';
  document.getElementById('filtroStatus').value = '';
  document.getElementById('filtroDataInicio').value = '';
  document.getElementById('filtroDataFim').value = '';
  toastr.info('Filtros limpos!');
}

function exportarGuias() {
  toastr.success('Exportação iniciada! O arquivo será baixado em breve.');
}

function imprimirGuia(id) {
  window.open('/estoque/guias/' + id + '/print', '_blank');
}

function confirmarEntrega(id) {
  Swal.fire({
    title: 'Confirmar Entrega?',
    text: 'Esta ação marcará a guia como entregue.',
    icon: 'question',
    showCancelButton: true,
    confirmButtonColor: '#28a745',
    cancelButtonColor: '#6c757d',
    confirmButtonText: 'Sim, confirmar!',
    cancelButtonText: 'Cancelar'
  }).then((result) => {
    if (result.isConfirmed) {
      // Aqui seria feita a requisição para confirmar entrega
      Swal.fire('Confirmada!', 'A entrega foi confirmada com sucesso.', 'success');
    }
  });
}

function iniciarTransporte(id) {
  Swal.fire({
    title: 'Iniciar Transporte?',
    text: 'Esta ação marcará a guia como em trânsito.',
    icon: 'question',
    showCancelButton: true,
    confirmButtonColor: '#007bff',
    cancelButtonColor: '#6c757d',
    confirmButtonText: 'Sim, iniciar!',
    cancelButtonText: 'Cancelar'
  }).then((result) => {
    if (result.isConfirmed) {
      // Aqui seria feita a requisição para iniciar transporte
      Swal.fire('Iniciado!', 'O transporte foi iniciado com sucesso.', 'success');
    }
  });
}
</script>