<!-- Modal Nova Fatura -->
<div class="modal fade" id="modal-nova-fatura">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-header bg-success">
        <h4 class="modal-title">Nova Fatura</h4>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <form>
          <div class="row">
            <div class="col-md-6">
              <div class="form-group">
                <label for="cliente">Cliente/Empresa</label>
                <select class="form-control select2" id="cliente" style="width: 100%;">
                  <option selected disabled>Selecione um cliente</option>
                  <option>Empresa ABC Ltda</option>
                  <option>Comércio XYZ</option>
                  <option>Loja 123</option>
                  <option>Restaurante Delícia</option>
                  <option>Farmácia Saúde</option>
                </select>
              </div>
              <div class="form-group">
                <label for="data_emissao">Data de Emissão</label>
                <div class="input-group date" id="data_emissao" data-target-input="nearest">
                  <input type="text" class="form-control datetimepicker-input" data-target="#data_emissao">
                  <div class="input-group-append" data-target="#data_emissao" data-toggle="datetimepicker">
                    <div class="input-group-text"><i class="fa fa-calendar"></i></div>
                  </div>
                </div>
              </div>
              <div class="form-group">
                <label for="data_vencimento">Data de Vencimento</label>
                <div class="input-group date" id="data_vencimento" data-target-input="nearest">
                  <input type="text" class="form-control datetimepicker-input" data-target="#data_vencimento">
                  <div class="input-group-append" data-target="#data_vencimento" data-toggle="datetimepicker">
                    <div class="input-group-text"><i class="fa fa-calendar"></i></div>
                  </div>
                </div>
              </div>
            </div>
            <div class="col-md-6">
              <div class="form-group">
                <label for="referencia">Referência</label>
                <input type="text" class="form-control" id="referencia" placeholder="Referência ou Nº de Assinatura">
              </div>
              <div class="form-group">
                <label for="forma_pagamento">Forma de Pagamento</label>
                <select class="form-control" id="forma_pagamento">
                  <option>Transferência Bancária</option>
                  <option>Cartão de Crédito</option>
                  <option>M-Pesa</option>
                  <option>Dinheiro</option>
                </select>
              </div>
              <div class="form-group">
                <label for="status">Status</label>
                <select class="form-control" id="status">
                  <option>Pendente</option>
                  <option>Paga</option>
                  <option>Vencida</option>
                  <option>Cancelada</option>
                </select>
              </div>
            </div>
          </div>
          
          <h5 class="mt-4 mb-2">Itens da Fatura</h5>
          <div class="table-responsive">
            <table class="table table-bordered" id="items-table">
              <thead>
                <tr>
                  <th>Descrição</th>
                  <th width="100">Quantidade</th>
                  <th width="150">Preço Unit.</th>
                  <th width="150">Total</th>
                  <th width="50">Ação</th>
                </tr>
              </thead>
              <tbody>
                <tr>
                  <td>
