<!-- Scripts específicos para esta página -->
<script>
  $(function () {
    // Inicializa Select2
    $('.select2').select2();
    
    // Dados para o gráfico de receita mensal
    var receitaMensalData = {
      labels: ['Jan', 'Fev', 'Mar', 'Abr', 'Mai', 'Jun', 'Jul', 'Ago', 'Set', 'Out', 'Nov', 'Dez'],
      datasets: [
        {
          label: 'Receita 2023',
          backgroundColor: 'rgba(60,141,188,0.9)',
          borderColor: 'rgba(60,141,188,0.8)',
          pointRadius: 3,
          pointColor: '#3b8bba',
          pointStrokeColor: 'rgba(60,141,188,1)',
          pointHighlightFill: '#fff',
          pointHighlightStroke: 'rgba(60,141,188,1)',
          data: [18500, 19250, 21000, 22750, 24500, 26000, 27500, 28750, 30000, 31250, 32500, 33750]
        },
        {
          label: 'Receita 2022',
          backgroundColor: 'rgba(210, 214, 222, 1)',
          borderColor: 'rgba(210, 214, 222, 1)',
          pointRadius: 3,
          pointColor: 'rgba(210, 214, 222, 1)',
          pointStrokeColor: '#c1c7d1',
          pointHighlightFill: '#fff',
          pointHighlightStroke: 'rgba(220,220,220,1)',
          data: [12000, 13500, 14750, 16000, 17250, 18500, 19750, 21000, 22250, 23500, 24750, 26000]
        }
      ]
    };

    // Configuração do gráfico de receita mensal
    var receitaMensalOptions = {
      maintainAspectRatio: false,
      responsive: true,
      plugins: {
        legend: {
          display: true
        }
      },
      scales: {
        x: {
          grid: {
            display: false
          }
        },
        y: {
          grid: {
            display: false
          },
          beginAtZero: true,
          ticks: {
            callback: function(value) {
              return 'R$ ' + value.toString().replace(/\B(?=(\d{3})+(?!\d))/g, ".");
            }
          }
        }
      },
      tooltips: {
        callbacks: {
          label: function(tooltipItem, data) {
            return data.datasets[tooltipItem.datasetIndex].label + ': R$ ' + 
                   tooltipItem.yLabel.toString().replace(/\B(?=(\d{3})+(?!\d))/g, ".");
          }
        }
      }
    };

    // Cria o gráfico de receita mensal
    var receitaMensalCanvas = $('#receitaMensalChart').get(0).getContext('2d');
    new Chart(receitaMensalCanvas, {
      type: 'line',
      data: receitaMensalData,
      options: receitaMensalOptions
    });

    // Dados para o gráfico de receita por plano
    var receitaPorPlanoData = {
      labels: ['Básico', 'Profissional', 'Enterprise'],
      datasets: [{
        data: [25, 45, 30],
        backgroundColor: ['#f56954', '#00a65a', '#f39c12']
      }]
    };

    // Configuração do gráfico de receita por plano
    var receitaPorPlanoOptions = {
      maintainAspectRatio: false,
      responsive: true,
      plugins: {
        legend: {
          position: 'right'
        }
      }
    };

    // Cria o gráfico de receita por plano
    var receitaPorPlanoCanvas = $('#receitaPorPlanoChart').get(0).getContext('2d');
    new Chart(receitaPorPlanoCanvas, {
      type: 'doughnut',
      data: receitaPorPlanoData,
      options: receitaPorPlanoOptions
    });
  });
</script>