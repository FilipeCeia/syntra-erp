<!-- Modal de Aplicação -->
<div class="modal fade" id="aplicarNotaModal" tabindex="-1">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Aplicar Nota de Débito</h5>
        <button type="button" class="close" data-dismiss="modal">
          <span>&times;</span>
        </button>
      </div>
      <form id="aplicarNotaForm">
        <div class="modal-body">
          <div class="form-group">
            <label>Data de Aplicação</label>
            <input type="date" class="form-control" name="data_aplicacao" required>
          </div>
          <div class="form-group">
            <label>Observações</label>
            <textarea class="form-control" name="observacoes" rows="3"></textarea>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
          <button type="submit" class="btn btn-success">Aplicar Nota</button>
        </div>
      </form>
    </div>
  </div>
</div>

<script>
$(document).ready(function() {
  $('#notasDebitoTable').DataTable({
    language: {
      url: '//cdn.datatables.net/plug-ins/1.13.7/i18n/pt-BR.json'
    },
    responsive: true,
    order: [[2, 'desc']]
  });
});

function aplicarNota(id) {
  $('#aplicarNotaModal').modal('show');
  $('#aplicarNotaForm').attr('action', '/financas/notas-debito/' + id + '/aplicar');
}

$('#aplicarNotaForm').on('submit', function(e) {
  e.preventDefault();
  
  $.ajax({
    url: $(this).attr('action'),
    method: 'POST',
    data: $(this).serialize(),
    success: function(response) {
      if (response.success) {
        toastr.success('Nota de débito aplicada com sucesso!');
        $('#aplicarNotaModal').modal('hide');
        location.reload();
      } else {
        toastr.error(response.message || 'Erro ao aplicar nota de débito');
      }
    },
    error: function() {
      toastr.error('Erro ao aplicar nota de débito');
    }
  });
});
</script>