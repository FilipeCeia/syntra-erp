<script>
// Função para pesquisar categorias
function pesquisarCategorias() {
  const searchTerm = document.getElementById('searchInput').value.toLowerCase();
  const status = document.getElementById('statusFilter').value;
  
  // Aqui seria implementada a lógica de pesquisa
  console.log('Pesquisando:', { searchTerm, status });
}

// Função para limpar filtros
function limparFiltros() {
  document.getElementById('searchInput').value = '';
  document.getElementById('statusFilter').value = '';
  pesquisarCategorias();
}

// Função para confirmar eliminação
function confirmarEliminacao(id) {
  if (confirm('Tem certeza que deseja eliminar esta categoria?\n\nAtenção: Esta ação pode afetar os produtos associados.')) {
    // Aqui seria implementada a lógica de eliminação
    console.log('Eliminando categoria:', id);
  }
}

// Event listeners
document.addEventListener('DOMContentLoaded', function() {
  // Pesquisa em tempo real
  document.getElementById('searchInput').addEventListener('input', pesquisarCategorias);
  document.getElementById('statusFilter').addEventListener('change', pesquisarCategorias);
});
</script>